{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": false
  },
  "extends": [
    "eslint:recommended",
    "react-app"
    // "react-app/jest",
    // "plugin:react/recommended",
    // "airbnb",
    // "prettier"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "quotes": ["error", "double", { "avoidEscape": true }],
    "react/jsx-filename-extension": ["off", "double"],
    "react/react-in-jsx-scope": ["off"],
    "react/jsx-uses-react": ["off"],
    "react/jsx-props-no-spreading": ["warn"],
    "no-shadow": "off",
    "react/prop-types": "off",
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "semi": ["error", "always"],
    "curly": ["error", "all"],
    "consistent-this": ["error", "that"],
    "no-console": 0,
    "no-unused-vars": 0
  }
}
